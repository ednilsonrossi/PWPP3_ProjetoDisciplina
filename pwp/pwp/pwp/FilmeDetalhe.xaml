<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pwp.FilmeDetalhe">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20,20,20,20">
                <Image x:Name="imgPosterFilme" HeightRequest="200" WidthRequest="150" HorizontalOptions="Center" />
                <Label Text="Nome do filme" FontAttributes="Bold"/>
                <Label x:Name="lblNomeFilme"/>

                <Label Text="Resenha" FontAttributes="Bold"/>
                <Label x:Name="lblDescricaoFilme"/>

                <Label Text="Ano de lançamento" FontAttributes="Bold"/>
                <Label x:Name="lblAnoFilme"/>

                <Label Text="Genero" FontAttributes="Bold"/>
                <Label x:Name="lblGeneroFilme"/>

                <Label Text="Produtora" FontAttributes="Bold"/>
                <Label x:Name="lblProdutoraFilme"/>

                <Button x:Name="btnFilme" Text="Salvar favorito" Clicked="btnSalvarFavorito_Clicked" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>