<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pwp.Pesquisa"
             Title="Buscar Filme">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtNomeFilme" Placeholder="Digite o nome do filme" Margin="10"/>
            <Button Text="Buscar filme" Clicked="btnBuscar_Clicked" Margin="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>